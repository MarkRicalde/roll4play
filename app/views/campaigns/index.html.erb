<h1 class="text-3xl font-bold mb-8">All Campaigns</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @campaigns.each do |campaign| %>
    <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow duration-300">
      <h2 class="text-xl font-semibold mb-2">
        <%= link_to campaign.title, campaign_path(campaign), class: "text-blue-600 hover:underline" %>
      </h2>
      <p class="text-gray-700 mb-4"><%= truncate(campaign.description, length: 100) %></p>
      <%= link_to "View Campaign", campaign_path(campaign), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
