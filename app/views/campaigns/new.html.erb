<!-- app/views/campaigns/new.html.erb -->
<h1>New Campaign</h1>

<%= form_with model: @campaign, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block font-bold" %>
    <%= form.text_field :title, class: "border rounded w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block font-bold" %>
    <%= form.text_area :description, class: "border rounded w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :system, class: "block font-bold" %>
    <%= form.text_field :system, class: "border rounded w-full" %>
  </div>

  <%= form.submit "Create Campaign", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
